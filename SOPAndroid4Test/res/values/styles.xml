<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="StatusBarBackground">  
        <item name="android:background">@drawable/topbar</item>  
    </style>  
    <style name="loginpage_EditText"></style>
    <style name="loginpage_EditText2">
        <item name="android:textSize">25.0sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="loginpage_TextView_account">
        <item name="android:singleLine">true</item>
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="loginpage_TextView_white">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>
    <style name="loginpage_checkbox" parent="@style/WswCheckBox">
        <item name="android:textColor">#ffffff</item>
        <item name="android:button">@drawable/wsw_btn_check</item>
    </style>
    <style parent="@android:style/Widget.CompoundButton.CheckBox" name="WswCheckBox">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:paddingLeft">28.0dip</item>
        <item name="android:button">@drawable/wsw_btn_check</item>
    </style>
    <style name="WSWThemeDefault" parent="@android:style/Theme">
        <item name="android:windowTitleBackgroundStyle">@style/StatusBarBackground</item> 
        <item name="android:windowTitleSize">35dip</item>       
        <item name="android:windowContentOverlay">@null</item>  
    
    
        <item name="item_divider">@drawable/divider_group</item>
        <!-- <item name="more_select_bg">@drawable/more_select</item> -->
    </style>    
    
    <style name="main_header_title">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ff000000</item>
    </style>

    <style name="other_header_title">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ccffff</item>
    </style>
    
    <style name="text_content">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="text_content_white">
        <item name="android:ellipsize">middle</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    
    <style name="PopupAnimation" parent="android:Animation">  
       <item name="android:windowEnterAnimation">@anim/popup_in</item>  
       <item name="android:windowExitAnimation">@anim/popup_out</item>  
    </style>
        
    <style name="AppItem.Name" parent="@android:style/Widget.TextView">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/common_font_color_2</item>
    </style>
    
    <style name="AppItem.StateView" parent="@android:style/Widget.TextView">
        <item name="android:textSize">11.0sp</item>
        <item name="android:textColor">@color/common_font_color_2</item>
        <item name="android:gravity">bottom|center</item>
        <item name="android:background">@null</item>
    </style>
        
    <style name="AppItem.Date" parent="@android:style/Widget.TextView">
        <item name="android:textSize">10.0sp</item>
        <item name="android:textColor">@color/common_font_color_4</item>
        <item name="android:gravity">left</item>
    </style>
    <style name="AppItem.Size" parent="@android:style/Widget.TextView">
        <item name="android:textSize">10.0sp</item>
        <item name="android:textColor">@color/common_font_color_4</item>
        <item name="android:gravity">right</item>
    </style>
    
    <!-- 新增其他设施、实施对话框样式 -->
    <style name="my_other_point_dialog" parent="@android:style/Theme.Dialog">
	    <item name="android:windowFrame">@null</item>
	    <item name="android:windowIsFloating">true</item>
	    <item name="android:windowIsTranslucent">false</item>
	    <item name="android:windowNoTitle">true</item>
	    <item name="android:windowBackground">@drawable/login_bg</item>
	    <item name="android:backgroundDimEnabled">false</item>
	</style>
	
    
    <!-- for d2e_now_place_fun -->
    <style name="now_place_fun_tv_style">
		<item name="android:textSize">24.0dip</item>
		<item name="android:textColor">#ff343434</item> 
		<item name="android:textStyle">bold</item>       
    </style>
    
    <!-- for d2e_place_data_coll -->
    <style name="place_data_coll_tv_style">
        <item name="android:textSize">12.0dip</item>
        <item name="android:textColor">#ff343434</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="place_data_coll_et_style">
        <item name="android:background">#ffffffff</item>
        <item name="android:ellipsize">end</item>
        <item name="android:hint">@string/et_place_data_hint</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#ff0b70a4</item>
        <item name="android:textSize">12.0dip</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="place_data_coll_et_client_style">
        <item name="android:background">#ffffffff</item>
        <item name="android:ellipsize">end</item>
        <item name="android:hint">@string/et_place_data_client_hint</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#ff0b70a4</item>
        <item name="android:textSize">12.0dip</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="place_data_coll_btn_text_style">
        <item name="android:textSize">15.0dip</item>
    </style>
    
    
    <!-- for d2e_mouse_watch -->
    <style name="at_text_style">
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:paddingLeft">2.0dip</item>
        <item name="android:paddingRight">40.0dip</item>
        <item name="android:maxLength">6</item>
		<item name="android:background">@null</item>
        <item name="android:textSize">12.0dip</item>
        <item name="android:textColor">#ff0b70a4</item> 
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="mouse_watch_tv_style">
        <item name="android:freezesText">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:layout_width">200.0dip</item>
        <item name="android:textSize">12.0dip</item>
        <item name="android:textColor">#ff343434</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <!-- for d2e_dialog_watch_kind -->
    <style name="dialog_watch_kind_tv_style">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15pt</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    
    <style name="dialog_watch_kind_et_style">
        <item name="android:background">#ffffffff</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#ff0b70a4</item>
        <item name="android:textSize">18.0dip</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    
    <!-- for d2e_dialog_watch_kind_item -->
    <style name="d2e_dialog_watch_kind_item_tv_style">
        <item name="android:textSize">20.0dip</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    
    <!-- for d2e_dialog_watch_kind -->
    <style name="d2e_dialog_watch_kind_tv_style">
        <item name="android:textSize">20.0dip</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    
</resources>
