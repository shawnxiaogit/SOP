<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="40.0dip"
    android:paddingBottom="0.0px"
    android:paddingLeft="0.0px"
    android:paddingRight="0.0px"
    android:paddingTop="0.0px" 
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants"
    >

    <FrameLayout
        android:id="@id/panel_msg_state"
        android:layout_alignParentLeft="true"
        android:layout_width="8.0dip"
        android:layout_height="40.0dip"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="0.0dip" >

        <ImageView
            android:id="@id/msg_state"
            android:layout_width="8.0dip"
            android:layout_height="40.0dip"
            android:clickable="true"
            android:src="@drawable/msg_state" />
    </FrameLayout>

    <TextView
        android:id="@id/msg_text"
        style="@style/text_content"
        android:layout_width="160.0dip"
        android:layout_height="40.0dip"
        android:layout_toRightOf="@id/panel_msg_state"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="4.0dip"
        android:editable="false"
        android:inputType="none"
        android:textColor="#ffffff" 
        android:maxLength="20"
        android:ellipsize="end"
        android:singleLine="true"
        />
    <!-- 
    <TextView 
        style="@style/text_content"
        android:layout_width="wrap_content"
        android:layout_height="40.0dip"
        android:layout_alignParentRight="true"
        android:layout_marginRight="70.0dip"
        android:editable="false"
        android:inputType="none"
        android:textColor="#ffffff" 
        android:text="@string/message_form"
        />
     -->    
    <LinearLayout 
        android:id="@+id/panel_from"
        android:layout_width="wrap_content"
        android:layout_height="40.0dip"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40.0dip"
        android:paddingTop="2.0dip"
        android:paddingBottom="2.0dip"
        android:gravity="center_horizontal"
        >
        <ImageView 
            android:id="@+id/iv_create_user"
            android:layout_width="20.0dip"
            android:layout_height="20.0dip"
            />
        <TextView 
            android:id="@+id/tv_create_user"
            android:layout_width="wrap_content"
            android:layout_height="12.0dip"
            android:textColor="#ffffff"
            android:textSize="10sp"
            />
    </LinearLayout>
    <ImageButton
        android:id="@id/msg_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true" 
        android:background="@drawable/delete"
        />
</RelativeLayout>