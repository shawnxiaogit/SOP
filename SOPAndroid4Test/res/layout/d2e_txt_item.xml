    <TextView android:id="@id/txt_stateView" 
        android:layout_width="60.0dip" 
        android:layout_height="60.0dip" 
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true" 
        android:text="@string/check_download"
        style="@style/AppItem.StateView" />
    <RelativeLayout 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_marginTop="6.0dip" 
        android:layout_marginBottom="2.0dip" 
        android:layout_toRightOf="@id/txt_stateView" 
        android:layout_alignTop="@id/txt_stateView">
        <TextView android:ellipsize="marquee" 
            android:id="@id/txt_titleLabel" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:singleLine="true" 
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" 
            android:marqueeRepeatLimit="marquee_forever" 
            android:text="1"
            style="@style/AppItem.Name" />
        <TextView android:id="@id/txt_sizeLabel" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:singleLine="true" 
            android:layout_below="@id/txt_titleLabel" 
            android:layout_alignParentLeft="true" 
            android:text="2"
            style="@style/AppItem.Size" />
        <TextView android:id="@id/txt_dateLabel" 
            android:singleLine="true" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_below="@id/txt_sizeLabel" 
            android:layout_alignParentLeft="true" 
            android:text="3"
            style="@style/AppItem.Date" />
    </RelativeLayout>
</RelativeLayout>