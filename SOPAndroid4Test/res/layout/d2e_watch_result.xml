<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="8.0dip"
    android:paddingRight="8.0dip"
    >

    <!-- 区域 -->

    <RelativeLayout
        android:id="@id/panel_watch_result_area"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:background="@drawable/public_line_top" >

        <TextView
            android:id="@id/tv_watch_result_area"
            style="@style/place_data_coll_tv_style"
            android:layout_width="100.0dip"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5.0dip"
            android:text="@string/tv_watch_result_area" />

        <EditText
            android:id="@id/et_watch_result_area"
            style="@style/place_data_coll_et_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_watch_result_area"
            />
    </RelativeLayout>
    
    <!-- 勘查结果 -->

    <RelativeLayout
        android:id="@id/panel_watch_result_result"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:background="@drawable/public_line_mid" >

        <TextView
            android:id="@id/tv_watch_result_result"
            style="@style/place_data_coll_tv_style"
            android:layout_width="100.0dip"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5.0dip"
            android:text="@string/tv_watch_result_result" />

        <EditText
            android:id="@id/et_watch_result_result"
            style="@style/place_data_coll_et_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_watch_result_result"
            />
    </RelativeLayout>

    <!-- 备注 -->

    <RelativeLayout
        android:id="@id/panel_watch_result_mark"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:background="@drawable/public_line_bottom" >

        <TextView
            android:id="@id/tv_watch_result_mark"
            style="@style/place_data_coll_tv_style"
            android:layout_width="100.0dip"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5.0dip"
            android:text="@string/tv_watch_result_mark" />

        <EditText
            android:id="@id/et_watch_result_mark"
            style="@style/place_data_coll_et_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_watch_result_mark"
            />
    </RelativeLayout>

</LinearLayout>