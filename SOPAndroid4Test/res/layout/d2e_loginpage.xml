<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/loginRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:gravity="center_vertical"
    android:orientation="vertical" 
    >

    <!-- android:scrollbarThumbVertical -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_gravity="center_vertical"
        android:layout_weight="1.0"
        android:scrollbarThumbVertical="@drawable/trans" 
        >

        <LinearLayout
            android:id="@id/loginLineLayout"
            android:layout_width="fill_parent"
            android:layout_height="490dp"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@id/loginLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35.0dip"
                android:layout_marginRight="35.0dip"
                android:layout_marginTop="28.0dip" >

                <ImageView
                    android:id="@id/loginLogo"
                    android:layout_width="128.0dip"
                    android:layout_height="128.0dip"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/login_logo2" />

                <EditText
                    android:id="@id/login_edit_account"
                    style="@style/loginpage_EditText"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/loginLogo"
                    android:layout_marginBottom="12.0dip"
                    android:layout_marginTop="8.0dip"
                    android:background="@drawable/sop_edit_login"
                    android:hint="@string/input_user_name"
                    android:maxLength="11"
                    android:paddingLeft="60.0dip"
                    android:saveEnabled="true"
                    android:singleLine="true" />

                <TextView
                    android:id="@id/loginTextView01"
                    style="@style/loginpage_TextView_account"
                    android:layout_width="100.0dip"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/login_edit_account"
                    android:layout_alignLeft="@id/login_edit_account"
                    android:layout_alignTop="@id/login_edit_account"
                    android:layout_marginRight="15.0dip"
                    android:gravity="center_vertical"
                    android:paddingLeft="7.0dip"
                    android:text="@string/user_name" />

                <ImageView
                    android:id="@id/loginImageButton02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/login_edit_account"
                    android:layout_alignRight="@id/login_edit_account"
                    android:layout_alignTop="@id/login_edit_account"
                    android:layout_marginRight="1.0dip"
                    android:background="@drawable/login_man" />

                <EditText
                    android:id="@id/login_edit_pwd"
                    style="@style/loginpage_EditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/login_edit_account"
                    android:layout_alignRight="@id/login_edit_account"
                    android:layout_below="@id/login_edit_account"
                    android:background="@drawable/sop_edit_login"
                    android:hint="@string/input_user_pwd"
                    android:inputType="textPassword"
                    android:maxLength="16"
                    android:paddingLeft="60.0dip"
                    android:saveEnabled="true"
                    android:singleLine="true" />

                <TextView
                    android:id="@id/loginTextView02"
                    style="@style/loginpage_TextView_account"
                    android:layout_width="100.0dip"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/login_edit_pwd"
                    android:layout_alignRight="@id/loginTextView01"
                    android:layout_alignTop="@id/login_edit_pwd"
                    android:layout_marginRight="15.0dip"
                    android:gravity="center_vertical"
                    android:paddingLeft="7.0dip"
                    android:text="@string/user_pwd" />

                <ImageView
                    android:id="@id/loginImageButton02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/login_edit_pwd"
                    android:layout_alignRight="@id/login_edit_pwd"
                    android:layout_alignTop="@id/login_edit_pwd"
                    android:layout_marginRight="1.0dip"
                    android:background="@drawable/login_lock" />
            </RelativeLayout>

            <TableLayout
                android:id="@id/loginTableLayout01"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4.0dip"
                android:layout_marginLeft="47.0dip"
                android:layout_marginRight="47.0dip"
                android:layout_marginTop="12.0dip"
                android:stretchColumns="1" >

                <TableRow>

                    <CheckBox
                        android:id="@id/login_cb_saveuna"
                        style="@style/loginpage_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="32.0dip"
                        android:text="@string/save_account" />

                    <TextView
                        android:id="@id/forget_pwd"
                        style="@style/loginpage_TextView_white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="32.0dip"
                        android:text="@string/forget_pwd"
                        android:width="118.0dip" />
                </TableRow>

                <CheckBox
                    android:id="@id/login_cb_savepwd"
                    style="@style/loginpage_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="32.0dip"
                    android:text="@string/save_pwd" />

                <TableRow>
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="28.0dip"
                android:layout_marginLeft="47.0dip"
                android:layout_marginRight="47.0dip"
                android:layout_marginTop="15.0dip"
                android:gravity="center_horizontal|center_vertical" >

                <Button
                    android:id="@id/login_btn"
                    android:layout_width="150dip"
                    android:layout_height="48.0dip"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="18.0dip"
                    android:background="@drawable/login_btn_bg"
                    android:gravity="center_horizontal" />
            </LinearLayout>

            <TextView
                style="@style/loginpage_TextView_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="2.0dip"
                android:paddingRight="2.0dip"
                android:text="@string/version_number" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>