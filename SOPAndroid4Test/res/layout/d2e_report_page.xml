  <RelativeLayout android:orientation="horizontal" android:layout_height="wrap_content" android:layout_width="match_parent">
    <AutoCompleteTextView  
      android:paddingLeft="90.0dip" 
      android:id="@id/ckpoint_state"
      android:layout_width="match_parent" 
      android:layout_height="40dip"       
      android:layout_weight="1"
      android:background="@drawable/sop_edit_login" />
      <Button 
        android:id="@id/loginImageButton02" 
        android:background="@drawable/more_select" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_marginRight="1.0dip" 
        android:layout_alignTop="@id/ckpoint_state" 
        android:layout_alignRight="@id/ckpoint_state" 
        android:layout_alignBottom="@id/ckpoint_state" />
    <TextView 
      android:gravity="center_vertical" 
      android:paddingLeft="7.0dip"
      android:layout_alignLeft="@id/ckpoint_state"
      android:layout_alignTop="@id/ckpoint_state" 
      android:layout_alignBottom="@id/ckpoint_state"
      android:layout_width="wrap_content" 
      android:layout_height="35dip" 
      android:textColor="#000000"
      android:text="@string/cutomer_name" />       
        
    </RelativeLayout>  
  
    <RelativeLayout 
        android:orientation="horizontal"
        android:layout_width="fill_parent" 
        android:layout_height="35dip" 
        android:background="@drawable/calendar_title" 
        android:layout_marginLeft="10.0dip" 
        android:layout_marginTop="10.0dip" 
        android:layout_marginRight="10.0dip">
        <TextView 
            android:id="@id/calendar_title_text"
            android:layout_width="wrap_content" 
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:text="3月2011年"
            android:layout_height="fill_parent" />
        <Button android:layout_width="wrap_content" 
            android:id="@id/calendar_arrow_pre"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:background="@drawable/calendar_arrow_left"
            android:layout_marginLeft="10dip"/>
        <Button android:layout_width="wrap_content" 
            android:id="@id/calendar_arrow_next"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/calendar_arrow_right"
            android:layout_marginRight="10dip"/>
    </RelativeLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
