                    android:id="@id/ibtn_cockroach_watch_hygiene_requ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@id/at_cockroach_watch_hygiene_requ"
                    android:layout_marginLeft="1.0dip"
                    android:background="@drawable/more_select" />
            </RelativeLayout>

            <!-- 客户方生产流程有否蟑螂入侵风险 8-->

            <RelativeLayout
                android:id="@id/panel_cockroach_watch_pipeline_risk"
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:background="@drawable/public_line_mid"
                android:gravity="center_vertical" >

                <com.mobilercn.widget.MarqueeTextView
                    android:id="@id/tv_cockroach_watch_pipeline_risk"
                    style="@style/mouse_watch_tv_style"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5.0dip"
                    android:text="@string/tv_cockroach_watch_pipeline_risk" />

                <AutoCompleteTextView
                    android:id="@id/at_cockroach_watch_pipeline_risk"
                    style="@style/at_text_style"
                    android:layout_width="match_parent"
                    android:layout_height="40.0dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@id/tv_cockroach_watch_pipeline_risk" />
                <!-- 下拉按钮 -->

                <ImageButton
                    android:id="@id/ibtn_cockroach_watch_pipeline_risk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@id/at_cockroach_watch_pipeline_risk"
                    android:layout_marginLeft="1.0dip"
                    android:background="@drawable/more_select" />
            </RelativeLayout>

            <!-- 客户方建筑及物品是否遭到蟑螂侵害 9-->

            <RelativeLayout
                android:id="@id/panel_cockroach_watch_things_be_breaked"
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:background="@drawable/public_line_mid"
                android:gravity="center_vertical" >

                <com.mobilercn.widget.MarqueeTextView
                    android:id="@id/tv_cockroach_watch_things_be_breaked"
                    style="@style/mouse_watch_tv_style"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5.0dip"
                    android:text="@string/tv_cockroach_watch_things_be_breaked" />

                <AutoCompleteTextView
                    android:id="@id/at_cockroach_watch_things_be_breaked"
                    style="@style/at_text_style"
                    android:layout_width="match_parent"
                    android:layout_height="40.0dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@id/tv_cockroach_watch_things_be_breaked" />
