                    android:id="@id/ibtn_cockroach_watch_room_in_find"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@id/at_cockroach_watch_room_in_find"
                    android:layout_marginLeft="1.0dip"
                    android:background="@drawable/more_select" />
            </RelativeLayout>

            <!-- 室内食品、仓储区域是否密封 2-->

            <RelativeLayout
                android:id="@id/panel_cockroach_room_in_seal"
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:background="@drawable/public_line_mid" >

                <com.mobilercn.widget.MarqueeTextView
                    android:id="@id/tv_cockroach_room_in_seal"
                    style="@style/mouse_watch_tv_style"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5.0dip"
                    android:text="@string/tv_cockroach_room_in_seal" />

                <AutoCompleteTextView
                    android:id="@id/at_cockroach_room_in_seal"
                    style="@style/at_text_style"
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@id/tv_cockroach_room_in_seal" />
                <!-- 下拉按钮 -->

                <ImageButton
                    android:id="@id/ibtn_cockroach_room_in_seal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@id/at_cockroach_room_in_seal"
                    android:layout_marginLeft="1.0dip"
                    android:background="@drawable/more_select" />
            </RelativeLayout>

            <!-- 室内各种管线、橱柜、家具有否蟑迹3 -->

            <RelativeLayout
                android:id="@id/panel_cockroach_room_in_furni_find"
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:background="@drawable/public_line_mid" >

                <com.mobilercn.widget.MarqueeTextView
