                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@id/tv_cockroach_room_in_curr_find" />
                <!-- 下拉按钮 -->

                <ImageButton
                    android:id="@id/ibtn_cockroach_room_in_curr_find"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@id/at_cockroach_room_in_curr_find"
                    android:layout_marginLeft="1.0dip"
                    android:background="@drawable/more_select" />
            </RelativeLayout>

            <!-- 室内门窗、通道、墙壁缝隙是否符合防蟑螂要求 5-->

            <RelativeLayout
                android:id="@id/panel_cockroach_room_in_requ"
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:background="@drawable/public_line_mid" >

                <com.mobilercn.widget.MarqueeTextView
                    android:id="@id/tv_cockroach_room_in_requ"
                    style="@style/mouse_watch_tv_style"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5.0dip"
                    android:text="@string/tv_cockroach_room_in_requ" />

                <AutoCompleteTextView
                    android:id="@id/at_cockroach_room_in_requ"
                    style="@style/at_text_style"
