                <!-- 下拉按钮 -->

                <ImageButton
                    android:id="@id/ibtn_cockroach_room_in_furni_find"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@id/at_cockroach_room_in_furni_find"
                    android:layout_marginLeft="1.0dip"
                    android:background="@drawable/more_select" />
            </RelativeLayout>

            <!-- 近期室内有否发现过蟑螂 4-->

            <RelativeLayout
                android:id="@id/panel_cockroach_room_in_curr_find"
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:background="@drawable/public_line_mid" >

                <com.mobilercn.widget.MarqueeTextView
                    android:id="@id/tv_cockroach_room_in_curr_find"
