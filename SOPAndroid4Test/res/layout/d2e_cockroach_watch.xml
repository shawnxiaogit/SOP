                    android:id="@id/ibtn_cockroach_room_in_requ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@id/at_cockroach_room_in_requ"
                    android:layout_marginLeft="1.0dip"
                    android:background="@drawable/more_select" />
            </RelativeLayout>

            <!-- 环境保洁制度是否完善 6-->

            <RelativeLayout
                android:id="@id/panel_cockroach_watch_syst_perf"
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:background="@drawable/public_line_mid" >

                <com.mobilercn.widget.MarqueeTextView
                    android:id="@id/tv_cockroach_watch_syst_perf"
                    style="@style/mouse_watch_tv_style"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5.0dip"
                    android:text="@string/tv_cockroach_watch_syst_perf" />

                <AutoCompleteTextView
                    android:id="@id/at_cockroach_watch_syst_perf"
                    style="@style/at_text_style"
