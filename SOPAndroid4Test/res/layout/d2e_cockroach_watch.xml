                    android:background="@drawable/more_select" />
            </RelativeLayout>

            <!-- 客户方有否蟑螂综合防制的理念 10-->

            <RelativeLayout
                android:id="@id/panel_cockroach_watch_prevention_think"
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:background="@drawable/public_line_bottom"
                android:gravity="center_vertical" >

                <com.mobilercn.widget.MarqueeTextView
                    android:id="@id/tv_cockroach_watch_prevention_think"
                    style="@style/mouse_watch_tv_style"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
