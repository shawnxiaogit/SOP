        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/panel_cockroach_watch_first"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip" >

            <!-- 现场勘察时发现的蟑螂 -->

            <RelativeLayout
                android:id="@id/panel_cockroach_watch_kind"
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:layout_marginTop="10.0dip"
                android:background="@drawable/public_line_top" >

                <com.mobilercn.widget.MarqueeTextView
                    android:id="@id/tv_cockroach_watch_kind"
                    style="@style/mouse_watch_tv_style"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5.0dip"
                    android:text="@string/tv_cockroach_watch_kind" />

                <AutoCompleteTextView
                    android:id="@id/at_cockroach_watch_kind"
                    style="@style/at_text_style"
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@id/tv_cockroach_watch_kind" />
                <!-- 下拉按钮 -->

                <ImageButton
                    android:id="@id/ibtn_cockroach_watch_kind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@id/at_cockroach_watch_kind"
                    android:layout_marginLeft="1.0dip"
                    android:background="@drawable/more_select" />
            </RelativeLayout>

            <!-- 室内水池、灶台、电器等区域有否蟑迹 1-->

            <RelativeLayout
                android:id="@id/panel_cockroach_watch_room_in_find"
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:background="@drawable/public_line_mid" >

                <com.mobilercn.widget.MarqueeTextView
                    android:id="@id/tv_cockroach_watch_room_in_find"
                    style="@style/mouse_watch_tv_style"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5.0dip"
                    android:text="@string/tv_cockroach_watch_room_in_find" />

                <AutoCompleteTextView
                    android:id="@id/at_cockroach_watch_room_in_find"
                    style="@style/at_text_style"
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@id/tv_cockroach_watch_room_in_find" />
                <!-- 下拉按钮 -->

